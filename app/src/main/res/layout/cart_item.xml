<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/cart_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/cart_product_image"
            android:layout_width="100dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/product_image" />



        <RelativeLayout

            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/cart_product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/antic"
                android:text="Footista Blue Running Shoes  "
                android:textColor="@color/backgroundColor" />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:id="@+id/imageView_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/antic"
                android:text="Size: 7" />

            <TextView
                android:id="@+id/product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView39"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/antic"
                android:text="Qty:" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_qty"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/antic"
                android:text="Rs. 898"
                android:textColor="@color/backgroundColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/product_taxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/antic"
                android:text="Including delivery Charges: Rs 59"
                android:textColor="@color/backgroundColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/show_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_taxes"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/antic"
                android:text="Show Detail"
                android:textColor="@color/blue_background" />

            <TextView
                android:id="@+id/old_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_qty"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@id/product_price"
                android:fontFamily="@font/antic"
                android:text="Rs.542"
                android:textSize="10sp" />


            <org.angmarch.views.NiceSpinner
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/product_qty"
                android:layout_below="@+id/product_name"
                android:id="@+id/nice_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_product_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparent"
            android:fontFamily="@font/antic"
            android:padding="5dp"
            android:text="Only 10 items left!"
            android:textColor="@color/blue_background" />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/loading_layout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar4"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/antic"
            android:padding="10dp"
            android:text="Please wait..."
            android:textColor="@color/backgroundColor"
            android:textSize="18sp" />

        <ProgressBar
            android:layout_centerHorizontal="true"
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>


</android.support.v7.widget.CardView>