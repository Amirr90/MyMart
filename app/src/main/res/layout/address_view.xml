<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView

            android:id="@+id/primary_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic"
            android:text="Your Primary Address"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/edit_address_image"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/primary_header"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/antic"
            android:text="NDMEEA"
            android:textColor="@color/backgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/antic"
            android:text="UGF 7 HO NO 57 A, HARIHAR NAGAR,INDRA NAGAR, LUCKNOW"
            android:textColor="@color/backgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pacifico"
            android:text="+919044000123"
            android:textColor="@color/backgroundColor"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

