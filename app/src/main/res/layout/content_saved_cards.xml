<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SavedCards"
    tools:showIn="@layout/activity_saved_cards">

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/saved_cards_rec"
        tools:listitem="@layout/saved_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:padding="25dp"
        android:gravity="center"
        android:id="@+id/saved_cards_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/saved_cards_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/card" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saved_cards_image"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/antic"
            android:padding="20dp"
            android:text="Looks like you don't have any saved cards! shop using your debit/credit cards to enjoy faster checkout!" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView48"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/transparent_gradient"
            android:fontFamily="@font/antic"
            android:text="Continue Shopping"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>